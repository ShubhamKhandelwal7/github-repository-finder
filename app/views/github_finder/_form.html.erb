
<div class='text-center'>
  <h3>Welcome to GitHub Repository Searcher</h3>
</div>
<div class=>
  <%= form_for :github_finder, url: check_repo_github_finder_index_url do |f| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.text_field :search, class: 'form-control' %> <br>

      <%= f.submit :SEARCH,
                    class: 'btn btn-sm fw-bold form-control',
                    style:"width: 100%; background-color: #0366d6; color: #fff;"  %>
    </div>
  <% end %>
</div>
